# TrustWrapper Senpi Plugin Environment Configuration
# Copy this file to .env and fill in your actual API keys

# ===== Core TrustWrapper Configuration =====
# TrustWrapper API Configuration
TRUSTWRAPPER_API_URL=https://api.trustwrapper.io
TRUSTWRAPPER_API_KEY=your_trustwrapper_api_key_here
TRUSTWRAPPER_TIMEOUT=5000

# Feature Flags
ENABLE_ZK_PROOFS=true
ENABLE_COMPLIANCE=true
CACHE_VERIFICATION_RESULTS=true

# Caching Configuration
CACHE_TTL_SECONDS=300
RETRY_ATTEMPTS=3
RETRY_DELAY=1000

# ===== Blockchain Data Integration =====
# NOWNodes API for blockchain verification
# Get your free API key at: https://nownodes.io/
NOWNODES_API_KEY=your_nownodes_api_key_here

# ===== Market Data Integration =====
# CoinGecko API (free tier - no key required for basic usage)
# For higher rate limits, get API key at: https://coingecko.com/en/api
COINGECKO_API_KEY=optional_coingecko_pro_key

# ===== Development Configuration =====
# Environment
NODE_ENV=development
LOG_LEVEL=info

# Development Flags
ENABLE_MOCK_DATA=false
ENABLE_DEBUG_LOGGING=true

# ===== Production Configuration =====
# Use these settings for production deployment

# Production TrustWrapper API
# TRUSTWRAPPER_API_URL=https://api.trustwrapper.io/v1
# TRUSTWRAPPER_API_KEY=prod_tw_xxxxxxxxxxxxxxxxxxxxx

# Production NOWNodes API
# NOWNODES_API_KEY=nownodes_prod_xxxxxxxxxxxxxxxxx

# Production Feature Flags
# ENABLE_ZK_PROOFS=true
# ENABLE_COMPLIANCE=true
# CACHE_VERIFICATION_RESULTS=true
# CACHE_TTL_SECONDS=60

# Production Environment
# NODE_ENV=production
# LOG_LEVEL=warn
# ENABLE_MOCK_DATA=false
# ENABLE_DEBUG_LOGGING=false

# ===== Senpi Integration Configuration =====
# Senpi Platform Integration
SENPI_AGENT_ID=trustwrapper_verification_agent
SENPI_MARKETPLACE_URL=https://senpi.xyz/marketplace
SENPI_API_VERSION=v1

# ===== Security Configuration =====
# API Rate Limiting
MAX_REQUESTS_PER_MINUTE=50
RATE_LIMIT_ENABLED=true

# Request Timeouts
API_TIMEOUT_MS=10000
BLOCKCHAIN_TIMEOUT_MS=15000
MARKET_DATA_TIMEOUT_MS=8000

# ===== Monitoring and Analytics =====
# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1

# Error Tracking
ENABLE_ERROR_TRACKING=true
ERROR_REPORTING_URL=https://your-error-tracking-service.com

# ===== Business Configuration =====
# Revenue Tracking
ENABLE_REVENUE_TRACKING=true
BILLING_TIER=premium

# Customer Analytics
ENABLE_CUSTOMER_ANALYTICS=true
ANALYTICS_ENDPOINT=https://your-analytics-service.com

# ===== Integration Testing =====
# Test Configuration
TEST_MODE=false
TEST_WALLET_ETHEREUM=0xde0B295669a9FD93d5F28D9Ec85E40f4cb697BAe
TEST_WALLET_BITCOIN=1A1zP1eP5QGefi2DMPTfTL5SLmv7DivfNa
TEST_WALLET_CARDANO=addr1qx2fxv2umyhttkxyxp8x0dlpdt3k6cwng5pxj3jhsydzer3jcu5d8ps7zex2k2xt3uqxgjqnnj83ws8lhrn648jjxtwq2ytjqp

# Mock Data Configuration (for development without API keys)
USE_MOCK_BLOCKCHAIN_DATA=false
USE_MOCK_MARKET_DATA=false
MOCK_VERIFICATION_CONFIDENCE=0.85

# ===== Partner API Configuration =====
# Additional blockchain data providers (optional)
ALCHEMY_API_KEY=your_alchemy_key_here
INFURA_PROJECT_ID=your_infura_project_id
QUICKNODE_ENDPOINT=your_quicknode_endpoint

# Additional market data providers (optional)
COINMARKETCAP_API_KEY=your_cmc_api_key
CRYPTOCOMPARE_API_KEY=your_cryptocompare_key

# ===== Advanced Configuration =====
# Custom Verification Models
CUSTOM_VERIFICATION_MODEL_ENABLED=false
CUSTOM_MODEL_ENDPOINT=https://your-custom-model.com/api

# Multi-Chain Support
SUPPORTED_CHAINS=ethereum,bitcoin,cardano,solana,polygon,avalanche,binance,ton
DEFAULT_CHAIN=ethereum

# Advanced Caching
REDIS_URL=redis://localhost:6379
USE_REDIS_CACHE=false
MEMORY_CACHE_SIZE=1000

