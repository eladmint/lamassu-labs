# Treasury Monitor Environment Configuration

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/treasury_monitor

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters

# API Key Security
API_KEY_SECRET=your-api-key-signing-secret-change-in-production

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_51234567890_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_51234567890_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourdomain.com

# Application Configuration
PORT=8080
ENV=development
DEBUG=true

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Treasury Monitor Specific
CARDANO_NETWORK=mainnet
TREASURY_MONITORING_INTERVAL=30
MAX_ADDRESSES_PER_REQUEST=50

# Admin Configuration
ADMIN_API_KEY=admin_your_admin_api_key_for_dashboard_access
